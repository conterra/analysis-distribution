{
    "Bundle-SymbolicName": "dn_analysisdistribution",
    "Bundle-Version": "1.0.3-SNAPSHOT",
    "Bundle-Name": "${bundleName}",
    "Bundle-Description": "${bundleDescription}",
    "Bundle-Vendor": "con terra GmbH",
    "Product-Name": "con terra Developer Network",
    "Config-Bundle-Location": "/config",
    "Require-Bundle": [
        {
            "name": "map"
        },
        {
            "name": "agssearch"
        },
        {
            "name": "resultcenter"
        }
    ],
    "CSS-Themes-Extension": [
        {
            "name": "*",
            "files": ["./styles/style.css"]
        }
    ],
    "layout-widgets": [
        {
            "role": "analysisDistributionWidget",
            "window": {
                "title": "${windowTitle}",
                "marginBox": {
                    "w": 450,
                    "h": 620
                },
                "dockTool": "analysisDistributionTool",
                "closable": true,
                "minimizeOnClose": true,
                "resizable": false
            }
        },
        {
            "role": "geometryAnalysisDistributionWidget",
            "window": {
                "title": "${windowTitle}",
                "marginBox": {
                    "w": 250,
                    "h": 150
                },
                "dockTool": "geometryAnalysisDistributionTool",
                "closable": true,
                "minimizeOnClose": true,
                "resizable": false
            }
        }
    ],
    "Components": [
        {
            "name": "WidgetFactory",
            "provides": [
                "dijit.Widget",
                "ct.framework.api.EventHandler"
            ],
            "properties": {
                "widgetRole": "analysisDistributionWidget",
                "storeId": "defineInAppJson",
                "enableStoreSelect": true,
                "chartType": "column",
                "enableLegend": true,
                "spatialOperator": "$intersects",
                "useExtent": false,
                "enableChartSwitch": true,
                "enableExtentSwitch": true
            },
            "instanceFactory": true,
            "immediate": true,
            "references": [
                {
                    "name": "store",
                    "providing": "ct.api.Store",
                    "cardinality": "1..n",
                    "filter": "(useIn=selection)"
                },
                /*{
                    "name": "_store",
                    "providing": "ct.api.Store",
                    "filter": "(id={storeId})",
                    "policy": "static"
                },*/
                {
                    "name": "_mapState",
                    "providing": "ct.mapping.map.MapState",
                    "policy": "static"
                },
                {
                    "name": "_tool",
                    "providing": "ct.tools.Tool",
                    "filter": "(id=analysisDistributionTool)"
                }
            ]
        },
        {
            "name": "${toolName}",
            "impl": "ct/tools/Tool",
            "provides": ["ct.tools.Tool"],
            "propertiesConstructor": true,
            "properties": {
                "id": "analysisDistributionTool",
                "toolRole": "toolset",
                "title": "${toolName}",
                "tooltip": "${toolTooltip}",
                "togglable": true,
                "iconClass": "icon-chart-bar"
            }
        },
        {
            "name": "GeometryWidgetFactory",
            "provides": [
                "dijit.Widget",
                "ct.framework.api.EventHandler"
            ],
            "properties": {
                "widgetRole": "geometryAnalysisDistributionWidget"
            },
            "instanceFactory": true,
            "immediate": true,
            "references": [
                {
                    "name": "store",
                    "providing": "ct.api.Store",
                    "cardinality": "1..n",
                    "filter": "(useIn=selection)"
                },
                {
                    "name": "_mapState",
                    "providing": "ct.mapping.map.MapState",
                    "policy": "static"
                },
                {
                    "name": "_tool",
                    "providing": "ct.tools.Tool",
                    "filter": "(id=geometryAnalysisDistributionTool)"
                },
                {
                    "name": "_dataModel",
                    "providing": "ct.resultcenter.DataModel"
                },
                {
                    "name": "_drawGeometryHandler",
                    "providing": "dn_analysisdistribution.DrawGeometryHandler"
                },
                {
                    "name": "_map",
                    "providing": "ct.mapping.map.Map"
                }, {
                    "name": "_windowManager",
                    "providing": "ct.framework.api.WindowManager"
                }
            ]
        },
        {
            "name": "test",
            "impl": "ct/tools/Tool",
            "provides": ["ct.tools.Tool"],
            "propertiesConstructor": true,
            "properties": {
                "id": "geometryAnalysisDistributionTool",
                "toolRole": "toolset",
                "title": "Geometry-Analysis/Distribution Tool",
                "tooltip": "Geometry-Analysis/Distribution Tool",
                "togglable": true,
                "iconClass": "icon-visibility-visible"
            }
        },
        {
            "name": "DrawGeometryHandler",
            "provides": "dn_analysisdistribution.DrawGeometryHandler",
            "references": [
                {
                    "name": "_eventService",
                    "providing": "ct.framework.api.EventService"
                },
                {
                    "name": "_drawController",
                    "providing": "ct.mapping.edit.DrawStateController"
                },
                {
                    "name": "_mapModel",
                    "providing": "ct.mapping.map.MapModel"
                },
                {
                    "name": "_logService",
                    "providing": "ct.framework.api.LogService"
                }
            ]
        }
    ]
}
